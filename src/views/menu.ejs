          .getElementById("filterInput")
          .value.toUpperCase();

        //Get Names ul
        let ul1 = document.getElementById("names1");

        let lia = ul1.querySelectorAll("div.collection-item1");
        let target1__Container = document.getElementById("names1");
        let container1__Visibility = target1__Container.querySelectorAll(
          "div.item1"
        );
