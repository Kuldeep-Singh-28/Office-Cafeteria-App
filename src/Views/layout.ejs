  <body>
    <!--========== SCROLL TOP ==========-->
    <a href="#" class="scrolltop" id="scroll-top">
      <i class="bx bx-chevron-up scrolltop__icon"></i>
    </a>

    <!--========== HEADER ==========-->
    <header class="l-header" id="header">
      <nav class="nav bd-container">
        <a href="/" class="nav__logo"
          ><img width="70px" src="/img/logo.png" alt="logo.png"
        /></a>

        <div class="nav__menu" id="nav-menu">
          <ul class="nav__list">
            <li class="nav__item">
              <a href="/" class="nav__link active-link">Home</a>
            </li>
            <li class="nav__item">
              <a href="/menu" class="nav__link active-link">Menu</a>
            </li>
            <li class="nav__item">
              <a href="#services" class="nav__link active-link">Offers</a>
            </li>
            <% if(user) { %>
            <li class="nav__item">
              <form id="logout" action="/logout" method="POST">
                <a
                  class="nav__link active-link"
                  onclick="document.getElementById('logout').submit()"
                  href="#"
                  >Logout</a
                >
              </form>
            </li>
            <% } else { %>
            <li class="nav__item">
              <a class="nav__link active-link" href="/register">Register</a>
            </li>
            <li class="nav__item">
              <a class="nav__link active-link" href="/login">Login</a>
            </li>
            <% } %>
            <li class="nav__cart nav__item">
              <a
                href="/cart"
                class="shopping__cart nav__link active-link rounded-full flex items-center"
              >
                <span id="cartCounter" class="font-bold"
                  ><%= session.cart ? session.cart.totalQty : '' %></span
                >
                <img
                  class="nav__link active-link"
                  src="/img/cart1.png"
                  alt="cart.png"
                />
              </a>
            </li>

            <li><i class="bx bx-moon change-theme" id="theme-button"></i></li>
          </ul>
        </div>

        <div class="nav__toggle" id="nav-toggle">
          <i class="bx bx-menu"></i>
        </div>
      </nav>
    </header>

